"						</entry>" + 
"					</row>" + 
"					<row>" + 
"						<entry>" + 
"							VERSION-CONTROL" + 
"						</entry>" + 
"						<entry>" + 
"							Node.addMixin(\"mix:versionable\")" + 
"						</entry>" + 
"					</row>" + 
"					<row>" + 
