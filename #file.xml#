"	<chapter id=\"chap-Portlets_with_JSF_and_CDI\">" + 
"	<title>Portlets with JSF and CDI</title>" + 
"	<!--" + 
"		Source: https://docs.jboss.org/author/display/GTNPORTAL36/Portlets+with+JSF+and+CDI" + 
"	-->" + 
"	<remark>" + 
