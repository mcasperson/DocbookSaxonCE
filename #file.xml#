"						</entry>" + 
"					</row>" + 
"					<row>" + 
"						<entry>" + 
"							DELETE" + 
"						</entry>" + 
"						<entry>" + 
"							Node.remove()" + 
"						</entry>" + 
"					</row>" + 
"					<row>" + 
"						<entry>" + 
"							GET" + 
"						</entry>" + 
