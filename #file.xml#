"            &lt;value&gt;/pages/main.xhtml&lt;/value&gt;" + 
"        &lt;/init-param&gt;" + 
"        &lt;init-param&gt;" + 
"            &lt;name&gt;javax.portlet.faces.defaultViewId.edit&lt;/name&gt;" + 
"            &lt;value&gt;/pages/edit.xhtml&lt;/value&gt;" + 
"        &lt;/init-param&gt;" + 
